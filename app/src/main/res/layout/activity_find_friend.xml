<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mikechung.android_messaging_app_implementation.contact.FindFriendActivity"
    android:id="@+id/findFriend">

    <TextView
        android:id="@+id/findFriend_info"
        android:text="@string/findFriend_Induction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:singleLine="true"
        android:id="@+id/findFriend_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/findFriend_info" />

    <Button
        android:layout_height="40dp"
        android:layout_width="80dp"
        android:text="@string/findFriendBtn"
        android:id="@+id/findButton"
        android:layout_centerInParent="true"
        android:layout_below="@id/findFriend_query"
        />

    <TextView
        android:layout_below="@id/findButton"
        android:id="@+id/findFriend_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/findFriend_confirm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/findFriend_result"
        android:text="@string/text_confirm"
        android:visibility="invisible"/>

</RelativeLayout>
